<p id="notice"><%= notice %></p>
<h1><%= @project.name %><span style="font-size: 0.5em">   [<%= @project.horizon %>]</span></h1>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.complete %></td>
        <td><%= link_to 'Show', project_task_path(@project.id, task.id) %></td>
        <td><%= link_to 'Edit', edit_project_task_path(task.id) %></td>
        <td><%= link_to 'Destroy', project_task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_project_task_path(project_id: @project.id) %>
<%= link_to 'Edit',  edit_project_task_path(@project) %> |
<%= link_to 'Back', projects_path %>
